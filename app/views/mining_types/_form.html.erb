<%= form_with(model: mining_type, local: true) do |form| %>
  <div class="form-group">
    <%= form.label t("description") %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label t("acronym") %>
    <%= form.text_field :acronym, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit t('create.mining_type'), class: "btn btn-success"%>
    <%= link_to t('links.back'), mining_types_path, class: "btn btn-secondary" %>
  </div>
  <% end %>



